*{margin:0;padding:0;box-sizing:border-box}body{color:#2d2d2d;font-size:1rem;line-height:1.4;font-family:noto sans sc,Helvetica;text-rendering:optimizeLegibility!important;scroll-behavior:smooth;-webkit-text-size-adjust:100%;-ms-text-size-adjust:100%;-webkit-font-smoothing:initial}::selection{color:#fff;background-color:#fc4041}h1,h2,h3{font-weight:700}h1{font-size:1.875rem;margin:20px auto}h2{font-size:1.5rem;margin:20px auto}h3{font-size:1.3125rem;margin:20px auto}h4{font-size:1.3125rem;padding:20px auto}h5{font-size:.3125rem;padding:10px auto}h6{font-size:-.6875rem;padding:10px auto}table{border-collapse:collapse;border-spacing:0}a{text-decoration:none;color:#2d2d2d;font-family:noto sans sc,Helvetica}#homepage .bgtop{background:url(/images/homepage-top.jpg);background-repeat:no-repeat;background-size:cover;background-position-x:center;width:100%;height:320px}#homepage .content-bg{width:920px;max-width:100%;border-radius:4px;border:1px solid #e2e2e2;box-shadow:0 0 20px rgba(0,0,0,.1);background-color:#f7f7f7;margin:0 auto;margin-bottom:40px}#homepage .homepage-posts{margin:auto;margin-top:56px;margin-bottom:30px;width:80%}#homepage .homepage-posts .post-title{text-align:center;margin-top:56px;margin-bottom:12px}#homepage .homepage-posts .post-date{margin-bottom:26px;text-align:center;font-size:14px;color:#707070}#homepage .homepage-posts img{border-radius:4px;width:100%;height:300px;object-fit:cover;align-content:center;box-shadow:0 0 10px rgba(0,0,0,.16);margin-bottom:30px}#homepage .homepage-posts .post-summary{line-height:24px;text-align:left;color:#707070}#homepage .homepage-posts .post-meta{margin-top:50px}#homepage .homepage-posts .post-meta *{font-size:.875rem}#homepage .homepage-posts .post-meta .post-cate,#homepage .homepage-posts .post-meta .post-tags{font-weight:700;color:#707070;margin-right:18px}#homepage .homepage-posts .post-meta .more{position:relative;margin-right:0;float:right;z-index:1}#homepage .homepage-posts .post-meta .more a{margin-right:10px;z-index:10;font-weight:700}#homepage .homepage-posts .post-meta .more svg{margin-left:10px}#homepage .homepage-posts .post-meta .more a::before{position:absolute;content:"";top:-16px;left:50px;width:64px;height:64px;border-radius:50%;background:#ececec;transition:all .1s ease-in;z-index:-1}#homepage .homepage-posts .post-meta .more a:hover::before{background:#fc4041;transition:all .1s ease-in}#homepage .homepage-posts .post-meta .more a:hover path{position:relative;fill:#fff;transition:all .1s ease-in}#homepage .homepage-posts .post-divider{margin-top:12px;height:0;background:0 0;border:1px solid #ebebeb}#homepage .homepage-posts:last-child .post-divider{border:0}#footer{background-color:#2d2d2d;padding:30px}#footer .content{text-align:center;color:#707070;line-height:1.625rem}#footer .content a{color:#fc4041}#navigation .nav-wrapper{padding:10px 10%}